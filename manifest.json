{
  "manifest_version": 3,
  "name": "SisPMG+",
  "version": "2.9",
  "description": "Adiciona funcionalidades e automações a sistemas utilizados pela PMMG.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "nativeMessaging",
    "alarms",
    "offscreen"
  ],
  "host_permissions": [
    "*://*.policiamilitar.mg.gov.br/*",
    "https://script.google.com/*",
    "https://docs.google.com/",
    "https://primebeneficios.com.br/*",
    "https://sistema-customizado.primebeneficios.com.br/*",
    "http://sgta.netfrota.com.br/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://terminal.policiamilitar.mg.gov.br/*"],
      "js": ["common/browser-polyfill.js", "terminal-content-script.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.policiamilitar.mg.gov.br/*"],
      "exclude_matches": ["*://terminal.policiamilitar.mg.gov.br/*"],
      "js": ["common/browser-polyfill.js", "intranet-content-script.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SisPMG+"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "terminal-loader.js",
        "intranet-loader.js",
        "offscreen.html",
        "common/*.css",
        "modules/*.html",
        "modules/*.css",
        "modules/abastecimentos/*.html",
        "modules/intranet/*.html",
        "modules/lib/sheetjs/*.html",
        "modules/terminal/*.html"
      ],
      "matches": ["*://*.policiamilitar.mg.gov.br/*"]
    },
    {
      "resources": [
        "common/browser-polyfill.js",
        "common/icon.js",
        "common/utils.js",
        "modules/**/*.js",
        "modules/**/*.mjs"
      ],
      "matches": ["*://*.policiamilitar.mg.gov.br/*"],
      "type": "module"
    }
  ]
}
